<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<h3>Phone Numbers</h3>
<ul>
  <% @person.phone_numbers.each do |phone| %>
  <li><%= phone.number %><%= link_to('edit', edit_phone_number_path(phone)) %><%= link_to('delete number', phone_number_path(phone), method: :delete, data: {confirm: 'Are you sure?'}) %></li>
  <% end %>
</ul>

<h3>Email Addresses</h3>
<ul>
  <% @person.email_addresses.each do |email_address| %>
  <li><%= email_address.address %><%= link_to('edit', edit_email_address_path(email_address)) %><%= link_to('delete address', email_address_path(email_address), method: :delete, data: {confirm: 'Are you sure?'}) %></li>
  <% end %>
</ul>

<%= link_to 'Add Phone Number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %>
<%= link_to 'Add Email Address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
